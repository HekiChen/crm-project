# Environment variables for CRM Backend API
# Copy this file to .env and update the values

# Application
APP_NAME="CRM Backend API"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT="development"

# Security
SECRET_KEY="your-secret-key-change-this-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM="HS256"

# Database
DATABASE_URL="postgresql+asyncpg://crm_user:crm_password@localhost:5432/crm_db"

# Redis
REDIS_URL="redis://localhost:6400/0"

# Celery
CELERY_BROKER_URL="redis://localhost:6400/0"
CELERY_RESULT_BACKEND="redis://localhost:6400/0"

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8080"