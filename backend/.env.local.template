# Local Development Environment Configuration
# Copy this file to .env and update with your local settings

# Database Configuration
DATABASE_URL=postgresql+asyncpg://crm_user:crm_password@localhost:5432/crm_db

# Redis Configuration  
REDIS_URL=redis://localhost:6400/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6400/0
CELERY_RESULT_BACKEND=redis://localhost:6400/0

# Application Settings
DEBUG=true
ENVIRONMENT=development
SECRET_KEY=development-secret-key-change-in-production

# CORS Configuration (for local frontend development)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:5173"]

# JWT Configuration
JWT_SECRET_KEY=local-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Local Development Settings
LOG_LEVEL=INFO
RELOAD=true

# Optional: Override specific settings for local development
# PGUSER=your_local_postgres_user
# PGPASSWORD=your_local_postgres_password
# PGHOST=localhost
# PGPORT=5432
# PGDATABASE=crm_db_local